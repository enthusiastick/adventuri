%br/
.row
  .small-12.columns
    %h1.text-center.serif Welcome To Venturi Underground
    %p.text-center.serif
      %em I should really have a better tagline.
  %hr/
-@posts.each do |post|
  .row
    .small-10.small-centered.columns
      .panel
        %p.text-right
          %em Posted by Adam on #{post.created_at.to_formatted_s(:short)}
          -if session[:poster]
            =link_to post_path(post) do
              &nbsp;
              %i.fi-pencil
        %h1 #{post.title}
      %div
        =raw RedCloth.new(post.body).to_html
    %br/
    %hr/
